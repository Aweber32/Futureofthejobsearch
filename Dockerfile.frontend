FROM node:20-slim AS build
WORKDIR /app

# Accept build arguments for environment variables
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_API_BASE

# Install dependencies
COPY package*.json ./
RUN npm ci --production=false

# Copy source and build
COPY . .

# Set environment variables for the build
ENV NEXT_PUBLIC_API_URL=$NEXT_PUBLIC_API_URL
ENV NEXT_PUBLIC_API_BASE=$NEXT_PUBLIC_API_BASE

RUN npm run build

# Use a lightweight runtime image
FROM node:20-slim AS runtime
WORKDIR /app

# Copy standalone output from build stage
COPY --from=build /app/.next/standalone/ .

# Also copy static and public assets from the full build output. The standalone
# folder may not include all runtime static chunks, so copy them explicitly.
RUN mkdir -p .next/static || true
COPY --from=build /app/.next/static/ .next/static/
COPY --from=build /app/public/ public/

ENV NODE_ENV=production
# Ensure the node process listens on the same port App Service will route to
# Default to 8080 which matches our App Service WEBSITES_PORT setting
ENV PORT=8080
EXPOSE 8080

# Start the standalone server
CMD ["node", "server.js"]
